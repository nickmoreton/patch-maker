{
  "name": "genos-patch-browser",
  "version": "1.0.0",
  "description": "MIDI Patch Browser for Yamaha Genos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "icons:build": "node scripts/generate-icons.js && iconutil -c icns assets/AppIcon.iconset -o assets/AppIcon.icns"
  },
  "author": "Nick Moreton",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "midi": "^2.0.0"
  },
  "build": {
    "appId": "com.nickmoreton.genos-patch-browser",
    "productName": "Genos Patch Browser",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/AppIcon.icns"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "main.js",
      "index.html",
      "renderer.js",
      "preload.js",
      "pst-generator.js",
      "styles.css",
      "patches.json",
      "assets/**"
    ]
  }
}
